<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/head_bg_new"
    tools:context="xc.LEDILove.activity.MusicActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/head_bg_low"/>

    <LinearLayout
        android:id="@+id/ll_pre"
        android:layout_below="@id/include_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/black_bg"
        android:padding="5dp">
        <FrameLayout
            android:id="@+id/LEDFrView_music"
            android:layout_width="match_parent"
            android:layout_height="80dp"/>
    </LinearLayout>

    <RadioGroup
        android:layout_marginTop="10dp"
        android:layout_below="@id/ll_pre"
        android:id="@+id/rg_item_select"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb_built"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/music_built"
            android:minHeight="30dp"
            android:background="@drawable/selector_radiogroup_item"
            android:button="@null"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/rb_local"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:minHeight="30dp"
            android:text="@string/music_local"
            android:background="@drawable/selector_radiogroup_item"
            android:gravity="center"
            android:button="@null"
            android:layout_height="wrap_content" />
    </RadioGroup>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_music_type"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <LinearLayout
        android:id="@+id/ll_control"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="00:00"/>
            <SeekBar
                android:id="@+id/sb_music_progress"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:progress="0"
                android:minHeight="10dp"
                android:maxHeight="10dp"
                />
            <TextView
                android:id="@+id/tv_max_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"
                android:textSize="12sp"
                android:text="00:00"/>

        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:id="@+id/tv_current_music"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_height="wrap_content"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_music_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/iv_music_last"
                    android:layout_alignParentLeft="true"
                    android:src="@mipmap/ic_repeat_white_24dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_music_last"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/iv_start_control"
                    android:background="@drawable/selector_music_last" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_start_control"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_fragment_music_play" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_music_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_start_control"
                    android:background="@drawable/selector_music_next" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_music_sync"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_music_next"
                    android:layout_alignParentRight="true"/>
                    <!--android:src="@mipmap/ic_sync_disabled_white_24dp"-->

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



    <xc.LEDILove.widget.VisualizerView
        android:visibility="gone"
        android:id="@+id/visView_music"
        android:layout_width="match_parent"
        android:layout_height="300dp" />
</LinearLayout>
