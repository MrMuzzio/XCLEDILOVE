<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/ic_background"
    tools:context="xc.LEDILove.activity.PaletteActivity">
    <include
        android:id="@+id/il_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/head_back"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:id="@+id/ll_paint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rectangle_red"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:text="@string/dimensions"/>
                    <TextView
                        android:id="@+id/tv_dimensions"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:text="16X16"/>
                </LinearLayout>
                <xc.LEDILove.widget.LEDPaintView
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/sfv_paint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:layout_gravity="center"
                            android:id="@+id/btn_undo"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/selector_palte_undo"
                            />
                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/undo"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:id="@+id/ibtn_clear"
                            android:layout_width="40dp"
                            android:layout_gravity="center"
                            android:layout_height="40dp"
                            android:background="@drawable/selector_palte_del"
                            />
                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/reset"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:id="@+id/btn_save"
                            android:background="@drawable/selector_palte_save"
                            android:layout_width="40dp"
                            android:layout_gravity="center"
                            android:layout_height="40dp"
                            />
                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/save"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:id="@+id/btn_preview"
                            android:background="@drawable/selector_palte_preview"
                            android:layout_width="40dp"
                            android:layout_gravity="center"
                            android:layout_height="40dp"
                            />
                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/preview"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:id="@+id/ll_color_control"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/ll_paint"
                android:orientation="horizontal">
                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="30dp"
                    android:id="@+id/ll_control"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/rb_pen"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/selector_pattle_pen"
                        />
                    <RadioButton
                        android:id="@+id/rb_rubber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/selector_pattle_clear"
                        />
                    <RadioButton
                        android:id="@+id/rb_bucket"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="20dp"
                        android:button="@null"
                        android:background="@drawable/selector_pattle_paint"/>

                </RadioGroup>
                <ImageButton
                    android:id="@+id/ib_pic"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/selector_pattle_pic"
                    />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/ll_color_select"
                android:layout_width="match_parent"

                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/ll_color_control"
                android:layout_height="50dp">
                <RadioButton
                    android:id="@+id/rb_back"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_pattle_color_black"
                    />
                <RadioButton
                    android:id="@+id/rb_red"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_pattle_color_red"
                    />
                <RadioButton
                    android:id="@+id/rb_yellow"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_pattle_color_yellow"
                    />
                <RadioButton
                    android:id="@+id/rb_green"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_pattle_color_green"
                    />
                <RadioButton
                    android:id="@+id/rb_cyan"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_pattle_color_cyan"
                    />
                <RadioButton
                    android:id="@+id/rb_blue"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_pattle_color_blue"
                    />
                <RadioButton
                    android:id="@+id/rb_purple"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_pattle_color_purple"
                    />
                <RadioButton
                    android:id="@+id/rb_white"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_pattle_color_white"
                    />

            </RadioGroup>
        </RelativeLayout>
    </ScrollView>


</LinearLayout>
